                                    <option value="" selected>請選擇分類</option>

                                </select>
                            </div>
                        </div>
                    </div>
                    <!--分類選擇-->
                    <!--商品價格描述-->
                    <div class="container">
                        <div class="input-group my-2">
                            <span class="input-group-text" id="basic-addon1">商品價格</span>
                            <input type="text" class="form-control CreateProductPrice" value="" placeholder="請輸入商品價格" aria-describedby="basic-addon1" required>
                        </div>
                        <div class="des my-1">
                            <h6 class="text-center">商品描述</h6>

<body>
    <div class="container mt-5">
        <div class="row">
            <h3 class="text-center">商品維護</h3>
        </div>
        <div class="row mt-4">
            <div class="col-12 col-md-6">
                <div class="item">
                    <div class="input-group ">
                        <span class="input-group-text" id="basic-addon1">商品名稱</span>
                        <input type="text" class="form-control SearchProductName w-100" value="" placeholder="以商品名稱搜尋" aria-describedby="basic-addon1" required>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-6">
                <div class="item my-2">
                    <select name="" id="SearchGenderSelect" class="mx-2">
                        <option value="" selected>以性別搜尋</option>
                        <option value="1">男裝</option>
                        <option value="2">女裝</option>
                    </select>

                    <select name="" id="SearchCategorySelect" class="mx-2">
                        <option value="" selected>以分類搜尋</option>
                    </select>

                    <select name="" id="SearchStatus" class="mx-2">
                        <option value="" selected>以狀態搜尋</option>
                        <option value="1">Enabled</option>
                        <option value="0">Disabled</option>
                    </select>
                </div>
            </div>
            <div class="col-12 col-md-6">
                <div class="item my-2">
                    <div class="input-group">
                        <span class="input-group-text" id="basic-addon1">價格下限</span>
                        <input type="text" class="form-control CreateProductLowPrice" value="" placeholder="以價格下限搜尋" aria-describedby="basic-addon1" required>
                        <span class="input-group-text" id="basic-addon1">價格上限</span>
                        <input type="text" class="form-control CreateProductHightPrice" value="" placeholder="以價格上限搜尋" aria-describedby="basic-addon1" required>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-6">
                <div class="item my-2">
                    <button type="button" class="btn btn-primary SearchProduct">
                        搜尋商品
                    </button>
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#CreateProductModel">
                        新增商品
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!--商品模板-->
    <template class="ProductTemplate">
        <div class="item mx-3 my-3">
            <div class="col-12 col-lg-6 my-3">
                <div class="card" style="max-width: 650px;">
                    <div class="row g-0">
                        <div class="col-md-4">
                            <img src="/Image/棉質印花短版上衣.jpeg" class="img-fluid rounded-start photo" alt="...">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <div class="container-fluid">
                                    <div class="row">
                                        <div class="col-8">
                                            <h5 class="card-title name">棉質印花短版上衣></h5>
                                        </div>
                                        <div class="col-4">
                                            <small class="mx-3 gender">男裝</small><small class="mx-1 category">分類</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="ProductPrice my-2">
                                    <h6>價格: <small class="mx-3 price">2341234123</small></h6>
                                </div>
                                <div class="box my-2">
                                    <h6>描述:</h6>
                                    <p class="description text-truncate">Lorem ipsum dolor, sit amet consectetur adipisicing elit. Aliquid repellat saepe inventore nobis consectetur deserunt ad illo atque nisi. Dignissimos ad iusto quisquam tempore unde laboriosam aliquam adipisci inventore modi? awefawfefefefawefawefawefawefawefawef</p>
                                </div>
                                <div class="stock">
                                    <table class="table table-bordered">
                                        <thead class="table-dark">
                                            <tr>
                                                <th scope="col">尺寸</th>
                                                <th scope="col">S</th>
                                                <th scope="col">M</th>
                                                <th scope="col">L</th>
                                                <th scope="col">XL</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <th scope="row">庫存</th>
                                                <td class="s">234</td>
                                                <td class="m">12</td>
                                                <td class="l">234</td>
                                                <td class="xl">123</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                                <div class="d-flex justify-content-center">
                                    <button type="button" class="btn btn-primary ToEdit" ProductId="" data-bs-toggle="modal" data-bs-target="#EditProductModel">
                                        編輯商品
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </template>
    <!--商品模板-->
    <!--商品放置-->
    <div class="container">
        <div class="row ProductList">


        </div>
    </div>
    <!--商品放置-->
    <!--編輯商品Model-->

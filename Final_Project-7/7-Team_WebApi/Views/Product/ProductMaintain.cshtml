                        <div class="row">
                            <div class="col-3">
                                <div class="input-group">
                                    <span class="input-group-text" id="basic-addon1">S</span>
                                    <input type="text" class="form-control CreateProductS" value="" placeholder="庫存" aria-describedby="basic-addon1" required>
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="input-group">
                                    <span class="input-group-text" id="basic-addon1">M</span>
                                    <input type="text" class="form-control CreateProductM" value="" placeholder="庫存" aria-describedby="basic-addon1" required>
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="input-group">
                                    <span class="input-group-text" id="basic-addon1">L</span>
                                    <input type="text" class="form-control CreateProductL" value="" placeholder="庫存" aria-describedby="basic-addon1" required>
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="input-group">
                                    <span class="input-group-text" id="basic-addon1">XL</span>
                                    <input type="text" class="form-control CreateProductXL" value="" placeholder="庫存" aria-describedby="basic-addon1" required>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--狀態圖片選擇-->
                    <div class="container my-2">
                        <div class="row">
                            <div class="col-6">
                                <select class="form-select" id="CreateStatusSelect" aria-label="Default select example">
                                    <option value="" selected>請選擇狀態</option>
                                    <option value="1">Enabled</option>
                                    <option value="0">Disabled</option>
                                </select>
                            </div>
                            <div class="col-6">
                                <input type="file" class="form-control CreateProductPhoto" accept="image/*" value="請輸入商品照片" required>
                            </div>
                        </div>
                    </div>
                    <!--狀態圖片選擇-->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary CreateProductClose" data-bs-dismiss="modal">關閉</button>
                    <button type="button" class="btn btn-primary submmit CreateProduct " data-bs-dismiss="modal" ProductId="" disabled="disabled">新增</button>
                </div>
            </div>
        </div>
    </div>


            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">編輯商品</h5>
                    <button type="button" class="btn-close EditProductClose" data-bs-dismiss="modal" aria-label="Close"> </button>
                </div>
                <div class="modal-body mx-auto">
                    <div class="container">
                        <div class="input-group">
                            <span class="input-group-text" id="basic-addon1">商品名稱</span>
                            <input type="text" class="form-control EditProductName" value="" placeholder="請輸入商品名稱" aria-describedby="basic-addon1" required>
                        </div>
                    </div>
                    <!--分類選擇-->
                    <div class="container my-2">
                        <div class="row">
                            <div class="col-6">
                                <select class="form-select" id="EditGenderSelect" aria-label="Default select example">
                                    <option value="" selected>請選擇性別</option>
                                    <option value="1">男裝</option>
                                    <option value="2">女裝</option>
                                </select>
                            </div>
                            <div class="col-6">
                                <select class="form-select" id="EditCategorySelect" aria-label="Default select example">
                                    <option value="" selected>請選擇分類</option>

                                </select>
                            </div>
                        </div>
                    </div>
                    <!--分類選擇-->
                    <!--商品價格描述-->
                    <div class="container">
                        <div class="input-group my-2">
                            <span class="input-group-text" id="basic-addon1">商品價格</span>
                            <input type="text" class="form-control EditProductPrice" value="" placeholder="請輸入商品價格" aria-describedby="basic-addon1" required>
                        </div>
                        <div class="des my-1">
                            <h6 class="text-center">商品描述</h6>
                            <textarea name="" id="" cols="30" rows="5" class="w-100 EditProductDes" required></textarea>
                        </div>
                    </div>
                    <!--商品價格描述-->

                    <div class="container">
                        <div class="row">
                            <div class="col-3">
                                <div class="input-group">
                                    <span class="input-group-text" id="basic-addon1">S</span>
                                    <input type="text" class="form-control EditProductS" value="" placeholder="庫存" aria-describedby="basic-addon1" required>
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="input-group">
                                    <span class="input-group-text" id="basic-addon1">M</span>
                                    <input type="text" class="form-control EditProductM" value="" placeholder="庫存" aria-describedby="basic-addon1" required>
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="input-group">
                                    <span class="input-group-text" id="basic-addon1">L</span>
                                    <input type="text" class="form-control EditProductL" value="" placeholder="庫存" aria-describedby="basic-addon1" required>
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="input-group">
                                    <span class="input-group-text" id="basic-addon1">XL</span>
                                    <input type="text" class="form-control EditProductXL" value="" placeholder="庫存" aria-describedby="basic-addon1" required>
                                </div>
                            </div>
                        </div>


                    </div>

                    <!--狀態圖片選擇-->
                    <div class="container my-2">
                        <div class="row">
                            <div class="col-6">
                                <select class="form-select" id="statusSelect" aria-label="Default select example">
                                    <option value="" selected>請選擇狀態</option>
                                    <option value="1">Enabled</option>
                                    <option value="0">Disabled</option>

                                </select>
                            </div>
                            <div class="col-6">
                                <input type="file" class="form-control EditProductPhoto" accept="image/*" value="請輸入商品照片" required>
                            </div>
                        </div>

                    </div>
                    <!--狀態圖片選擇-->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary EditProductClose" data-bs-dismiss="modal">關閉</button>
                    <button type="button" class="btn btn-primary submmit EditProduct " data-bs-dismiss="modal" ProductId="">儲存變更</button>
                </div>
            </div>
        </div>
    </div>

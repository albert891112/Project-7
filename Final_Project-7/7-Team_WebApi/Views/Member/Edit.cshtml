@model _7_Team_WebApi.Models.ViewModels.MemberVM

@{
    ViewBag.Title = "編輯會員";
}

<h3>啟用/停用帳戶</h3>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="bg">
        <img src="/File/pic-login.jpg">
    </div>

    <div class="container">
        <div class="form-horizontal">

            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            <div class="mb-3">
                @Html.LabelFor(model => model.Account, htmlAttributes: new { @class = "control-label col-md-2" })

                <span class="form-control" style="border: none; background-color: transparent;">@Html.DisplayFor(model => model.Account)</span>
            </div>


            <div class="mb-3 ">
                @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "control-label col-md-2" })

                <span class="form-control" style="border: none; background-color: transparent;">@Html.DisplayFor(model => model.FirstName)</span>


            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "control-label col-md-2" })

                <span class="form-control" style="border: none; background-color: transparent;">@Html.DisplayFor(model => model.LastName)</span>

            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })

                <span class="form-control" style="border: none; background-color: transparent;">@Html.DisplayFor(model => model.Email)</span>

            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.Enable, htmlAttributes: new { @class = "control-label col-md-2 visually-hidden" })

                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" id="EnableSwitch" name="Enable" @(Model.Enable ? "checked" : "") />
                    <label class="form-check-label" for="EnableSwitch"></label>
                    @Html.ValidationMessageFor(model => model.Enable, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="mb-3">

                <input type="submit" value="確認更改" class="btn btn-success" />

            </div>
        </div>
    </div>
    
}

<div>
    @Html.ActionLink("返回會員總覽", "Index",null,new {@class = "btn btn-outline-dark" })
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var enableSwitch = document.getElementById("EnableSwitch");

            enableSwitch.addEventListener("change", function () {
                enableSwitch.checked ? enableSwitch.value = true : enableSwitch.value = false;
            });
        });
    </script>
}

@section CSS {
    <style>
        .bg {
            position: fixed;
            top: 0;
            left: 0;
            bottom: 0;
            right: 0;
            z-index: -999;
        }

        .bg img {
            min-height: 100%;
            width: 100%;
            opacity: 30%;
        }
        body {
            margin-top: 120px;
        }
        .container {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 10px;
            opacity: 0.9;
        }
    </style>
}

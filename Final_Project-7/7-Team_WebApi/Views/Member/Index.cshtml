@model IEnumerable<_7_Team_WebApi.Models.ViewModels.MemberVM>

@{
    ViewBag.Title = "會員資料";
}

<h3>會員資料</h3>

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
<table class="table table-striped table-hover">
    <tr>
        
        <th>
            @Html.DisplayNameFor(model => model.Account)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Enable)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr class="customTablebackground">
        <td>
            @Html.DisplayFor(modelItem => item.Account)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td >
            @Html.DisplayFor(modelItem => item.Enable ,null, new { @class = "custom-control" })
        </td>
        <td>
            @Html.ActionLink("啟用/停用帳號", "Edit", new { id = item.Id }) |
        </td>
    </tr>
}

</table>
@section CSS {
    <style>
        body {
            margin-top: 120px;
        }
     .customTablebackground{
         background-color: rgba(240, 240, 240, 0.6);
    }

   
    </style>
}

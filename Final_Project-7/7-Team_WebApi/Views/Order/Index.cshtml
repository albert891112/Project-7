@model IEnumerable<_7_Team_WebApi.Models.ViewModels.OrderVM>

@{
    ViewBag.Title = "訂單管理";
}

<h2>訂單管理</h2>


<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.Member)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderStatus)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Payment)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Shipping)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Total)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr class="customTablebackground">
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.Member)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrderStatus)
            
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Payment)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Shipping)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Total)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrderDate)
        </td>
        <td>
            @Html.ActionLink("商品明細", "GetOrderItems", new { orderid = item.Id },new {@class ="btn btn-secondary"}) |
            @Html.ActionLink("編輯訂單狀態", "Edit", new { Id = item.Id },new {@class ="btn btn-info"}) |

        </td>
    </tr>
}

</table>
@section CSS {
    <style>
        body {
            margin-top: 120px;
        }
    .customTablebackground{
         background-color: rgba(240, 240, 240, 0.8);
    }
    </style>
}
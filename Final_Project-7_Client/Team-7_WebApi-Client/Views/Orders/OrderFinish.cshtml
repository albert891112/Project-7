
@{
    ViewBag.Title = "OrderFinish";
}

<style> 
   

    .text-center {
        font-size: 30px;
        color: aliceblue;
    }

   

    .congracontainer-box {
        margin-top: 300px;
        width: 500px;
        height: 250px;
        border-radius: 60px;
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        background-color: rgb(50, 199, 199,0);
        
        color: black;
    }

    .bg {
        position: fixed;
        top: 0;
        left: 0;
        bottom: 0;
        right: 0;
        z-index: -999;
    }

.bg img {
         min-height: 100%;
         width: 100%;
         opacity: 30%;
}

</style>

<body>
    <div class="bg">
        <img src="/Files/pic-login.jpg">
    </div>
    <!-- 感謝框 begin -->
    <div class="container-fluid mt-5">
        <div class="row">
            <div class="col-12 d-flex justify-content-center align-items-center">
                <div class="congracontainer-box text-center">
                    感謝您的訂購
                </div>
            </div>
        </div>
    </div>
    <!-- 感謝框 end -->
    <div class="row">
        <div class="col-12 text-center mt-5">
            <input type="button" class="btn btn-secondary" value="回到首頁" id="btnCheckoutHome">
        </div>
    </div>
    <script>
        document.addEventListener("DOMContentLoaded", function () {

            const btnCheckoutHome = document.getElementById("btnCheckoutHome");


            btnCheckoutHome.addEventListener("click", function () {

                window.location.href = "/Home/Index";
            });

            setTimeout(function () {
            window.location.href = "/Home/Index"; 
        }, 3000); 
        });


    </script>
</body>


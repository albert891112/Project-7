
@{
    ViewBag.Title = "Index";
}


<style>
    .startcontainer {
        margin-top: 80px;
    }

    .blue-box,
    .gray-box {
        width: 200px;
        height: 150px;
        border-radius: 20px;
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        margin: 0 10px;
    }


    .blue-box {
        background-color: rgb(119, 119, 189);
    }

    .gray-box {
        background-color: rgb(179, 179, 189);
    }

    .text-center {
        font-size: 30px;
        color: aliceblue;
    }
</style>

<body>
    <!-- 狀態START -->
    <div class="startcontainer">
        <div class="row">
            <div class="col-md-3 col-sm-12 ">
                <div class="gray-box text-center">
                    購物車清單
                </div>
            </div>
            <div class="col-md-3 col-sm-12">
                <div class="blue-box text-center">
                    填寫結帳資料
                </div>
            </div>
            <div class="col-md-3 col-sm-12">
                <div class="gray-box text-center">
                    確認結帳資料
                </div>
            </div>
            <div class="col-md-3 col-sm-12">
                <div class="gray-box text-center">
                    完成
                </div>
            </div>
        </div>
    </div>

    <!-- 狀態END -->
    <!-- 填寫表格START -->
    <table id="cartTable" class="table table-striped table-bordered align-middle products mt-5">
        <thead class="table-light fw-bolder">
            <tr>
                <td class="text-start ps-4 pe-4">填寫結帳資料</td>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    <div class="container">
                        <form>
                            <div class="form-group">
                                <label for="name"></label>
                                <input type="text" class="form-control" id="name" placeholder="請輸入姓名">
                            </div>
                            <div class="form-group">
                                <label for="email"></label>
                                <input type="email" class="form-control" id="email" placeholder="請輸入電子郵件">
                            </div>
                            <div class="form-group">
                                <label for="address"></label>
                                <textarea class="form-control" id="address" rows="3" placeholder="請輸入地址"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="creditCard"></label>
                                <input type="text" class="form-control" id="creditCard" placeholder="請輸入信用卡號碼">
                            </div>
                            <div class="form-group">
                                <label for="expiryDate"></label>
                                <input type="text" class="form-control" id="expiryDate" placeholder="MM/YY">
                            </div>
                            <div class="form-group">
                                <label for="cvv"></label>
                                <input type="text" class="form-control" id="cvv" placeholder="請輸入CVV">
                            </div>
                        </form>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
    <!-- 填寫表格END -->

    <div class="row">
        <div class="col-12 text-center">
            <input type="button" class="btn btn-secondary" value="上一步" id="btnCheckout" style="margin-right: 50px;">
            <input type="button" class="btn btn-secondary" value="下一步" id="btnCheckout" style="margin-left: 50px;">
        </div>
    </div>
</body>
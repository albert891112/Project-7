<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        #footer {
            margin-top: 10px;
            text-align: center;
          
        }
    </style>

    @RenderSection("css", required: false)
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-white fixed-top">
        <div class="container-fluid">
            @*@Html.ActionLink("挖系宜蘭郎", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@

            <a class="navbar-brand" href="Home">
                <img src="~/Files/pic01.jpg" alt="挖系宜蘭郎" width="75" height="40">
            </a>

            @*todo需修改連結*@
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li>@Html.ActionLink("首頁", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("男裝", "Index", "Help", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("女裝", "Index", "Category", new { area = "" }, new { @class = "nav-link" })</li>

                    @{
                        if (User.Identity.IsAuthenticated)
                        {
                            @*<li><a href="/Members/Index/" class="nav-link">@(User.Identity.Name)</a></li>*@

                            <li>@Html.ActionLink("購物車", "Info", "Cart", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("會員中心", "Index", "Members", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("登出會員", "Logout", "Members", new { area = "" }, new { @class = "nav-link" })</li>

                        }
                        else
                        {
                            <li>@Html.ActionLink("登入", "Login", "Members", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("註冊新會員", "Register", "Members", new { area = "" }, new { @class = "nav-link" })</li>
                        }
                    }
                </ul>
            </div>

        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <div class="container">
            <footer class="py-3 my-4">
                <ul class="nav justify-content-center border-bottom pb-3 mb-3">
                    <li class="nav-item"><a href="#" class="nav-link px-2 text-muted">Home</a></li>
                </ul>
                <p class="text-center text-muted">© 挖洗宜蘭郎</p>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        #footer {
            margin-top: 10px;
            text-align: center;
          
        }
    </style>

    @RenderSection("css", required: false)
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-white fixed-top">
        <div class="container-fluid">
            @*@Html.ActionLink("挖系宜蘭郎", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@

            <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                <img src="~/Files/pic01.jpg" alt="挖系宜蘭郎" width="75" height="40">
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                    <li class="nav-item">@Html.ActionLink("首頁", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
                <ul>
                    <div class="nav navbar-nav navbar-right">
                        @{
                            if (User.Identity.IsAuthenticated)
                            {
                                @*<li><a href="/Members/Index/" class="nav-link">@(User.Identity.Name)</a></li>*@

                            <li class="nav-item navbar-right ">@Html.ActionLink("購物車", "ToCart", "Cart", new { area = "" }, new { @class = "nav-link" })</li>
                            <li class="nav-item">@Html.ActionLink("會員中心", "Index", "Members", new { area = "" }, new { @class = "nav-link" })</li>
                            <li class="nav-item">@Html.ActionLink("登出會員", "Logout", "Members", new { area = "" }, new { @class = "nav-link" })</li>

                            }
                            else
                            {
                            <li class="nav-item">@Html.ActionLink("登入", "Login", "Members", new { area = "" }, new { @class = "nav-link" })</li>
                            <li class="nav-item">@Html.ActionLink("註冊新會員", "Register", "Members", new { area = "" }, new { @class = "nav-link" })</li>
                                }
                            }
                     </div>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <div class="container">
            <footer class="py-3 my-4">
                <!--<ul class="nav justify-content-center border-bottom pb-3 mb-3">-->
                    @*<li class="nav-item"><a href="#" class="nav-link px-2 text-muted">Home</a></li>*@
                <!--</ul>-->
                <p class="text-center text-muted">© 挖洗宜蘭郎</p>
            </footer>
        </div>
    </div>  

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

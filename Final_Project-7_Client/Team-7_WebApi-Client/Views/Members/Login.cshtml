@model Team_7_WebApi_Client.Models.Views.Members.LoginVm

@{
    ViewBag.Title = "登入";
}

<h3 class="login">會員登入</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="bg">
        <img src="/Files/pic-login.jpg">
    </div>

    <div class="container">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="mb-3" id="account">


            @Html.EditorFor(model => model.Account, new { htmlAttributes = new { @class = "form-control rounded-pill mx-auto", placeholder = Html.DisplayNameFor(m => m.Account) } })
            @Html.ValidationMessageFor(model => model.Account, "", new { @class = "text-danger" })

        </div>

        <div class="mb-3">


            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control rounded-pill mx-auto", placeholder = Html.DisplayNameFor(m => m.Password) } })
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

        </div>

        <div class="mb-3 checkbox">

            @Html.EditorFor(model => model.RememberMe)
            @Html.LabelFor(model => model.RememberMe, htmlAttributes: new { @class = "form-label col-md-2" })
            
        </div>

        <div class="text-center">

            <input type="submit" value="登入" class="btn btn-success rounded-pill" />

        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


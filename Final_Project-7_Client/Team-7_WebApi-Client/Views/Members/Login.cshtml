        }

        #footer {
            margin-top: 10px;
            text-align: center;
        }

        .breadcrumb {
            margin-top: 9%;
            margin-left: 5%;
        }

        .mb-3 {
            padding-bottom: 30px;
            text-align: center;
        }
        .container {
            padding-bottom: 100px;
        }


<style>
    .startcontainer {
        margin-top: 200px;
    }

    .blue-box,
    .gray-box {
        height: 150px;
        border-radius: 20px;
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        margin-top:100px;
    }

    .blue-box {
        background-color: rgb(119, 119, 189);
    }

    .gray-box {
        background-color: rgb(179, 179, 189);
    }

    .text-center {
        font-size: 30px;
        color: aliceblue;
    }

    .labelLef {
        margin-top: 30px;
        padding-left: 65px;
        font-size: 20px;
    }

    .methodLef {
        margin-top: 30px;
        padding-left: 90px;
        font-size: 30px;
    }

    .labelcentLef {
        margin-top: 30px;
        padding-left: 120px;
        font-size: 20px;
    }

    .symbol {
        margin-top: 15px;
        font-size: 30px;
    }

    div.amount-wrapper {
        margin-top: 30px;
        display: flex;
        align-items: center;
    }

    .bg {
        position: fixed;
        top: 0;
        left: 0;
        bottom: 0;
        right: 0;
        z-index: -999;
    }

        .bg img {
            min-height: 100%;
            width: 100%;
            opacity: 30%;
        }
</style>
<body>
    <div class="bg">
        <img src="/Files/pic-login.jpg">
    </div>
    <!--狀態確認 begin-->
    <div class="container-fluid">
        <div class="row">
            <div class=" col-sm-12 ">
                <div class="blue-box text-center ">
                    購物車
                </div>
            </div>
        </div>
    </div>

    <!--狀態確認 end-->

    <div>
        <div class="m-5">
            <div class="container">
                <div class="row">
                    <h3 class="fw-bolder">購物車清單</h3>
                    <div class="container">
                        <div class="row">
                            <div class="col-12">
                                <select name="" id="sort" class="form-select-sm mb-3" style="width:200px;">
                                    <option value="unitprice">按單價排序</option>
                                    <option value="subtotal">按小計遞減排序</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <table id="cartTable" class="table table-striped table-bordered align-middle products">
                        <thead class="table-light fw-bolder">
                            <tr>
                                <td>照片</td>
                                <td>品名</td>
                                <td class="text-end ps-4 pe-4">尺寸</td>
                                <td class="text-end ps-4 pe-4">單價</td>
                                <td class="text-end ps-4 pe-4">數量</td>
                                <td class="text-end ps-4 pe-4">小計</td>
                                <td class="text-end ps-4 pe-4"></td>
                            </tr>
                        </thead>
                        <tbody class="cartData">
                            <!--Crat模塊 Start-->
                            <template class="show_cart">
                                <tr>
                                    <td class="col-md-3 cart_img ">
                                        <img src="" alt="" style="width:200px">
                                    </td>
                                    <td class="col-md-3 cart_productName"></td>
                                    <td class="text-end ps-4 pe-4 col-md-1 cart_size" size="" product=""></td>
                                    <td class="text-end ps-4 pe-4 col-md-1 cart_unitPrice"></td>
                                    <td class="text-end ps-4 pe-4 col-md-1 cart_qty"></td>
                                    <td class="text-end ps-4 pe-4 col-md-1 cart_subtotal"></td>
                                    <td class="text-end col-md-3">
                                        <input type="button" class="btn btn-success btnAdd" value="+1" id="btnAdd">
                                        <input type="button" class="btn btn-danger btnSub" value="- 1" id="btnSub">
                                    </td>
                                </tr>
                            </template>
                        </tbody>
                        <!--Crat模塊 end-->
                        <tfoot>
                            <tr>
                                <td colspan="6" class="text-end ps-4 pe-4 cart_total" id="totalAmount">總金額：</td>
                            </tr>
                        </tfoot>

                    </table>

                    <div class="row">
                        <div class="col-12 text-center">
                            <input type="button" class="btn btn-secondary" value="回首頁" id="btnCheckoutHome" style="margin-right: 50px;">
                            <input type="button" class="btn btn-primary" value="去結帳" id="btnPay" style="margin-left: 50px;">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

@section scripts{
    <script src="~/Js/Cart.js"></script>
}

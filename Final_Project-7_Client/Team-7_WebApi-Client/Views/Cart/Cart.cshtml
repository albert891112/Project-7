@model Team_7_WebApi_Client.Models.Views.CartVM



@{
    ViewBag.Title = "Cart";
}

<style>

    .blue-box,
    .gray-box {
        width: 200px;
        height: 150px;
        border-radius: 20px;
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        margin-top: 80px;
    }


    .blue-box {
        background-color: rgb(119, 119, 189);
    }

    .gray-box {
        background-color: rgb(179, 179, 189);
    }

    .text-center {
        font-size: 30px;
        color: aliceblue;
    }

    .labelLef {
        margin-top: 30px;
        padding-left: 65px;
        font-size: 20px;
    }

    .methodLef {
        margin-top: 30px;
        padding-left: 90px;
        font-size: 30px;
    }

    .labelcentLef {
        margin-top: 30px;
        padding-left: 120px;
        font-size: 20px;
    }

    .symbol {
        margin-top: 15px;
        font-size: 30px;
    }

    div.amount-wrapper {
        margin-top: 30px;
        display: flex;
        align-items: center;
    }
</style>



<p>
    @Html.ActionLink("Create New", "Create")
</p>

<!--狀態確認 begin-->
<div class="container">
    <div class="row">
        <div class="col-md-3 col-sm-12 ">
            <div class="blue-box text-center">
                購物車
            </div>
        </div>
        <div class="col-md-3 col-sm-12">
            <div class="gray-box text-center">
                付款方式
            </div>
        </div>
        <div class="col-md-3 col-sm-12">
            <div class="gray-box text-center">
                填寫資料
            </div>
        </div>
        <div class="col-md-3 col-sm-12">
            <div class="gray-box text-center">
                核對資料
            </div>
        </div>
    </div>
</div>

<!--狀態確認 end-->

<div>
    <div class="m-5">
        <div class="container">
            <div class="row">
                <h3 class="fw-bolder">購物車清單</h3>
                <div class="container">
                    <div class="row">
                        <div class="col-12">
                            <select name="" id="sort" class="form-select-sm mb-3" style="width:200px;">
                                <option value="unitprice">按單價排序</option>
                                <option value="subtotal">按小計遞減排序</option>
                            </select>
                        </div>
                    </div>
                </div>

                <table id="cartTable" class="table table-striped table-bordered align-middle products">
                    <thead class="table-light fw-bolder">
                        <tr>
                            <td>照片</td>
                            <td>品名</td>
                            <td class="text-end ps-4 pe-4">單價</td>
                            <td class="text-end ps-4 pe-4">數量</td>
                            <td class="text-end ps-4 pe-4">小計</td>
                            <td class="text-end ps-4 pe-4">總金額</td>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                    <tfoot>
                        <tr>

                            <td colspan="6" class="text-end ps-4 pe-4" id="totalAmount">總金額：</td>
                        </tr>
                    </tfoot>
                </table>

                <div class="row">
                    <div class="col-12 text-center">
                        <input type="button" class="btn btn-secondary" value="回首頁" id="btnHomepage" style="margin-right: 50px;">
                        <input type="button" class="btn btn-secondary" value="結帳" id="btnCheckout" style="margin-left: 50px;">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<table>
    @foreach (var item in Model.CartItems)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Qty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubTotal)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>

@section scripts{
    <script src="~/Js/Cart.js"></script>
}
